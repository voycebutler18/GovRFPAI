# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-secure-one

# Application Settings
PORT=5000
DEBUG=True

# Session Configuration
SESSION_TIMEOUT_HOURS=8

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# Database Configuration (if using database instead of in-memory storage)
# DATABASE_URL=postgresql://user:password@localhost/govrfp
# MONGODB_URI=mongodb://localhost:27017/govrfp

# Authentication Settings
ENABLE_CAC_AUTH=True
ENABLE_EMAIL_AUTH=True
ENABLE_DEMO_AUTH=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# AI/ML Configuration (for future integration)
# OPENAI_API_KEY=your-openai-api-key
# AZURE_OPENAI_ENDPOINT=your-azure-endpoint
# AZURE_OPENAI_KEY=your-azure-key

# Government Integration Settings
# FEDRAMP_COMPLIANCE=True
# FIPS_140_2_COMPLIANCE=True

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years as per federal requirements
ENABLE_AUDIT_LOGGING=True

# Email Configuration (for notifications)
# SMTP_SERVER=smtp.defense.gov
# SMTP_PORT=587
# SMTP_USERNAME=your-smtp-username
# SMTP_PASSWORD=your-smtp-password
# SMTP_USE_TLS=True

# File Storage Configuration
# UPLOAD_FOLDER=uploads
# MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Performance Monitoring
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
